# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing-whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{*.{yaml,yml,sh,jscsrc},package.json,.*rc}]
indent_size = 2

# All kind of CSS files
[*.css]
max_line_length = 300
indent_size = 2

# All kind of JS files
[*.js]
max_line_length = 120

[*.md]
max_line_length = 200
trim_trailing-whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 1
